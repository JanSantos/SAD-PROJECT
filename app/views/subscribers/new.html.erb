<div class="container">
       
        <div class="row">
            <div class="col-lg-12">




<h1 class="page-header">New Subscriber</h1>

<%= simple_form_for(@subscriber) do |f| %>
  <%= f.input :name %>

  <%= f.input :subscription_type, :collection => Subscriber::SUBSCRIPTION_TYPE, :label => "Subscription Type", :include_blank => false %>
  <%= f.input :phone_details %>
  <%= f.input :fax_details %>
  <%= f.input :first_address %>
  <%= f.input :second_address %>
  <%= f.input :email_address %>
  <%= f.input :zip_code %>


    <%= f.submit "Save Subscriber", data: { confirm: "Confirm Subscriber?" } %>
<% end %>
<%= button_to "Cancel", subscribers_path, method: :get, data: { confirm: "Are you sure?" } %>


			</div>
		</div>
	</div>