

<div class="container">
       <div class="row">
            <div class="col-lg-12">
                    <h1 class="page-title">Manage Subscribers</h1><br>
                    <div class="table-responsive">
<i>For Global and Local Institutional Subscribers, please fill out Contact Person and IP Address in <b>Edit</b></i>
</br>
</br>

<%= form_tag subscribers_path, method: "GET" do %>




<div class="row">
    <div class="col-lg-12">
    <ul class="nav nav-tabs nav-justified">
    <li class="mytab" align="center" style="border-bottom-style: solid"><%= link_to new_subscriber_path do %> 

      <font color="white"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Subscriber</font>

      <% end %>
      </li>
    </ul>
  </div>
</div>





<div class="col-lg-14">
<table class="tablecss table table-striped">

  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Subscription Type</th>
    <th>Email Address</th>
    <th></th>
    <th></th>
    <th>Edit</th>
    <th>Delete</th>
    <th>Subscribe</th>
    <th>Invoice</th>
    
  </tr>

  <tr>
    <td></td>
    <div class="form-group">
    <td><%= text_field_tag :q_name, @q_name, :class => 'form-control' %></td>
    </div>

    <div class="form-group">
    <td><%= text_field_tag :q_subscription_type, @q_subscription_type, :class => 'form-control' %></td>
    </div>

    <div class="form-group">
    <td><%= text_field_tag :q_email_address, @q_email_address, :class => 'form-control' %></td>
    </div>
    <td><%= submit_tag "Search!", :class => 'btn btn-mini btn-info' %></td>
    <td><%= link_to "Clear", subscribers_path, :class => 'btn btn-mini btn-info', :style => 'color:white;' %></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
  </tr>


  
  



<% @subscribers.each do |subscriber| %>
    <tr  align="center">
      <td><%= subscriber.id %></td>
      <td><%= link_to subscriber.name, subscriber_path(subscriber.id) %></td>
      <td><%= subscriber.subscription_type %></td>
      <td><%= subscriber.email_address %></td>
      <td></td>
      <td></td>
      <td class="functions">
      <%= link_to edit_subscriber_path(subscriber.id) do %>
            
              <b><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></b>
          <% end %>
      </td>  
      <td class="functions">
      <%= link_to subscriber, method: :delete, data: { confirm: "Are you sure?" } do %>
            
              <b><span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span></b>
          <% end %>
      </td>            
       
      <td class="functions">
      <%= link_to new_subscriber_subscription_path(subscriber.id) do %>
            
              <b><span class="glyphicon glyphicon-share-alt" aria-hidden="true"></span></b>
          <% end %>
      </td>  


      <td class="functions">
      <%= link_to subscriber_path(subscriber, format: 'pdf'), :target => "_blank" do %>
            
              <b><span class=" glyphicon glyphicon-credit-card" aria-hidden="true"></span></b>
          <% end %>   
      </td> 



      
      <% end %>
    </tr>
  <% end %>
  
</table>
</div>
      
</div>
</div>
</div>