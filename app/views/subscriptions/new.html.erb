<div class="container">
       <div class="row">
            <div class="col-lg-12">

<%= simple_nested_form_for([@subscriber, @subscription]) do |f| %>
  <%= f.error_notification %>
 </br>
<h1 class="page-header">Add Subscription to: <i><%= @subscriber.name %></i></h1>

 </br>
Subscription Type: <i><%= @subscriber.subscription_type %></i>
	<b><%= f.association :journal, collection: Journal.enabled, :include_blank => false  %></b>

	Years Of Subscription<%= f.collection_select :years_of_subscription, Subscription::YEARS_OF_SUBSCRIPTION, :to_s, :to_s, :include_blank => false %>
	
	</br>


  </br>
  </br>
  

  <%= f.button :submit, data: { confirm: "Confirm subscription?" } %>

  <% end %>
  <%= button_to "Cancel", subscribers_path, method: :get, data: { confirm: "Are you sure?" } %>


  
</div>
  </div>
</div>