
<%= form_tag journals_path, method: "GET" do %>

<div class="container">
       <div class="row">
            <div class="col-lg-12">
                    <h1 class="page-title">Manage Journals</h1><br>



<table class="tablecss table table-striped">
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th></th>
    <th></th>
    <th>Status</th>
    <th>Number of Issues</th>
    <th>Number of Subscribers</th>
    <th>Issue</th>
    <th>Edit</th>
    <th>Delete</th>
    <th>Subscription Report</th>

    
    
  </tr>

  <tr>
  <div class="control-group">
    <td><label class="control-label" for="inputIcon">Search:</label></td>
    <div class="controls">
      <div class="input-prepend">
    <td><%= text_field_tag :q_title, @q_title %></td>
    <td><%= submit_tag "Search", :class => 'btn btn-mini btn-info' %></td>

    <% end %>
    <td><%= button_tag "Clear", type: :reset, :class => 'btn btn-mini btn-info' %></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    <td></td>
    
  </tr>



  <% @journals.each do |journal| %>
    <tr>
      <td><%= journal.id %></td>
      <td><%= link_to journal.title, journal_path(journal.id) %></td>
      <td></td>
      <td></td>
      <td><%= journal.status %>
      

  <% if journal.status == "Stopped" %>
                  <%= button_to "Activate", journal_ongoing_path(journal.id), method: :get, :class => 'btn btn-success' %>
                  <% elsif  journal.status == "Ongoing" %>
                  <%= button_to "Stop", journal_stopped_path(journal.id), method: :get, :class => 'btn btn-danger' %> 
                  <% end %>
                </td>
      <td><%= journal.issues.size %> </td>
      <td><%= journal.subscribers.size %></td>
      <td class="functions">
      <%= link_to new_journal_issue_path(journal.id) do %>
            
              <b><span class="glyphicon glyphicon-collapse-up" aria-hidden="true"></span></b>
          <% end %>
      </td>
      <td class="functions">
      <%= link_to edit_journal_path(journal.id) do %>
            
              <b><span class="glyphicon glyphicon-edit" aria-hidden="true"></span></b>
          <% end %>
      </td>  
      <td class="functions">
      <%= link_to journal, method: :delete, data: { confirm: "Are you sure?" } do %>
            
              <b><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span></b>
          <% end %>
      </td>            
        
      <td class="functions">
      <%= link_to journal_path(journal, format: 'pdf') do %>
            
              <b><span class="glyphicon glyphicon-align-justify" aria-hidden="true"></span></b>
          <% end %>
      </td> 
      <% end %>
    </tr>
  
</table>


</div>
</div>
</div>