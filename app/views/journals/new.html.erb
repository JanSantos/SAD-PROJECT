<h1>New Journal</h1>

<%= simple_form_for(@journal) do |f| %>
  <%= f.input :title %>
  <%= f.input :global_institutional_price %>
  <%= f.input :global_individual_price %>
  <%= f.input :local_institutional_price %>
  <%= f.input :local_individual_price %>
  <%= f.input :global_price_per_issue %>
  <%= f.input :local_price_per_issue %>
  
    <%= f.submit "Save Journal", data: { confirm: "Confirm Journal?" } %>
   <% end %>

   <%= button_to "Cancel", journals_path, method: :get, data: { confirm: "Are you sure?" } %>
  
