<div class="container">
       <div class="row">
            <div class="col-lg-12">
                <h1><%=@journal.title %>
                </h1><br>
            </div>
        </div>


        
       <div class="row">
            <div class="col-lg-12">
                  <ul class="nav nav-tabs nav-justified">
                    <li class="mytab" align="center"><%= link_to new_journal_issue_path(@journal.id) do %> 

                        <font color="white"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Issue</font>

                    <% end %>
                    </li>

                    <li class="mytab" align="center"><%= link_to edit_journal_path(@journal.id) do %> 

                        <font color="white"><span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit</font>

                    <% end %>
                    </li>


                  </ul>
                </div>
              </div>
        
        
        
<div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
               <div class="panel-heading">
                  <h3 class="panel-title"><b>Journal Information</b></h3>

              </div>



<div class="panel-body">
           
                 

  <table valign="top" align="left" style="width: 50%">
    <tbody><tr>
      <td width="200px" style="height:20px">ID</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b><%= @journal.id %></b></td>
      </tr>

      <tr>
      <td width="200px" style="height:20px">Title</td>
      <td >:</td>
      <td width="60%" style="height:50px"><b><%= @journal.title %></b></td>
      </tr>   

      <tr>
      <td width="200px" style="height:20px">Subscription Status</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b><%= @journal.status %></b></td>
      </tr>

      <tr>
      <td width="200px" style="height:20px">Number of Issues</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b><%= @journal.issues.size %></b></td>
      </tr>       

      <tr>
      <td width="200px" style="height:20px">Global Individual Price (USD)</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b>$ <%= number_with_precision(@journal.global_individual_price, :precision => 2) %></b></td>
      </tr>         
      
      <tr>
      <td width="200px" style="height:20px">Global Institutional Price (USD)</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b>$ <%= number_with_precision(@journal.global_institutional_price, :precision => 2) %></b></td>
      </tr> 

      </tbody></table> 
                    </td>
  <table valign="top" align="left" style="width: 50%">
    <tbody><tr>

      <tr>
      <td width="200px" style="height:20px">Local Individual Price (PHP)</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b>&#8369 <%= number_with_precision(@journal.local_individual_price, :precision => 2) %></b></td>
      </tr>

      <tr>
      <td width="200px" style="height:20px">Local Institutional Price (PHP)</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b>&#8369 <%= number_with_precision(@journal.local_institutional_price, :precision => 2) %></b></td>
      </tr>  

      <tr>
      <td width="200px" style="height:20px">Global Price Per Issue (USD)</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b>$ <%= number_with_precision(@journal.global_price_per_issue, :precision => 2) %></b></td>
      </tr> 

      <tr>
      <td width="200px" style="height:20px">Local Price Per Issue (USD)</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b>&#8369 <%= number_with_precision(@journal.local_price_per_issue, :precision => 2) %></b></td>
      </tr> 

      <tr>
      <td width="200px" style="height:20px">Number of Subscribers</td>
      <td>:</td>
      <td width="60%" style="height:50px"><b><%= @journal.subscribers.size %></b></td>
      </tr> 

      </tbody></table> 
                       
                    </td>
  
  </table>




             </div>
      </div>


  </br>

  <div class="row">
            <div class="col-lg-12">
                  <ul class="nav nav-tabs nav-justified">
                    <li class="mytab" align="center"><%= link_to journal_path(@journal, format: 'pdf'), :target => "_blank" do %> 

                        <font color="white"><span class="glyphicon glyphicon-open-file" aria-hidden="true"></span> Generate Report</font>

                    <% end %>
                    </li>
                    </ul>
                  </div>
                </div>


      <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
               <div class="panel-heading">
                  <h3 class="panel-title"><b>Subscribers</b></h3>
              </div>
      
      <table class="tablecss table table-striped">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Subscription Type</th>
                <th>Expiration</th>
            </tr>


            

            <% @journal.subscriptions.each do |subscription| %>
            <tr  align="center">
                  <td><%= subscription.subscriber.id %></td>
                  <td><%= link_to subscription.subscriber, subscriber_path(subscription.subscriber.id) %></td>
                  <td><%= subscription.subscriber.subscription_type %></td>
                  <td><%= subscription.expiration_date.strftime("%B %d, %Y") %></td>
                  <% end %>
                   </td>

                   </tr>
          
      </table>
      </br>

</br>
</br>