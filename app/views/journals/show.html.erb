<div class="container">
       <div class="row">
            <div class="col-lg-12">
                <h1><%=@journal.title %>
                </h1><br>
            </div>
        </div>


        <div class="row">
            <div class="col-lg-12">
              <div class="panel panel-default">
               <div class="panel-heading">
                  <h3 class="panel-title"><b>Journal Information</b></h3>
              </div>



            <div class="panel-body">
                 

              <table class="table table-striped" >
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Subscription Status</th>
    <th>Number of Issues</th>
    <th>Global Individual Price (USD)</th>
    <th>Global Institutional Price (USD)</th>
    <th>Local Individual Price (PHP)</th>
    <th>Local Institutional Price (PHP)</th>
    <th>Global Price Per Issue (USD)</th>
    <th>Local Price Per Issue (PHP)</th>
    <th>Number of Subscribers</th>
  </tr>


    
  <tr  align="center">


    <td><%= @journal.id %></td>
    <td><%= @journal.title %></td>
    <td><%= @journal.status %></td>
    <td><%= @journal.issues.size %> </td>
    <td><%= @journal.global_individual_price %></td>
    <td><%= @journal.global_institutional_price %></td>
    <td><%= @journal.local_individual_price %></td>
    <td><%= @journal.local_institutional_price %></td>
    <td><%= @journal.global_price_per_issue %></td>
    <td><%= @journal.local_price_per_issue %></td>
    <td><%= @journal.subscribers.size  %></td>


    </tr>
  </table>




             </div>
      </div>


  </br>
      <b>Subscribers</b>
      
      <table class="tablecss table table-striped">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Subscription Type</th>
            </tr>


            

            <% @journal.subscriptions.each do |subscription| %>
            <tr  align="center">
                  <td><%= subscription.subscriber.id %></td>
                  <td><%= link_to subscription.subscriber, subscriber_path(subscription.subscriber.id) %></td>
                  <td><%= subscription.subscriber.subscription_type %></td>
                  <% end %>
                   </td>

                   </tr>
          
      </table>
      </br>
<center>
<%= button_to "Back to list", journals_path, method: :get, :class => 'loginBtn btn btn-default', :id => 'loginbtn' %>
</br>
<%= button_to "Back", :back, method: :get, :class => 'loginBtn btn btn-default', :id => 'loginbtn' %>
</center>
</br>
</br>